generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Organization {
  id             String     @id @default(uuid())
  email          String     @unique
  name           String
  hashedPassword String
  details        String
  events         Events[]
}

model Corporation {
  id             String     @id @default(uuid())
  email          String     @unique
  name           String
  hashedPassword String?
  details        String
  isClaimed      Boolean    @default(false)
  pastEvents     PastEvents[]
  partners       Partners[]
  matchScores    MatchScore[]
}

model PastEvents {
  id             String     @id @default(uuid())
  name           String
  details        String
  date           DateTime
  corporationID  String
  corporation Corporation @relation(fields: [corporationID], references: [id])
}

model Events {
  id        String       @id @default(uuid())
  details   String       @db.Text
  title     String
  date      DateTime
  organizationID String
  organization   Organization @relation(fields: [organizationID], references: [id])
  partners       Partners[]
  matchScores    MatchScore[]
}

model Partners {
  eventID       String
  corporationID String
  status        String
  
  event       Events      @relation(fields: [eventID], references: [id])
  corporation Corporation @relation(fields: [corporationID], references: [id])

  @@id([eventID, corporationID])
}

model MatchScore {
  eventID       String
  corporationID String
  score         Float
  reasoning     String? @db.Text // Nullable as per ERD

  event       Events      @relation(fields: [eventID], references: [id])
  corporation Corporation @relation(fields: [corporationID], references: [id])

  @@id([eventID, corporationID])
}